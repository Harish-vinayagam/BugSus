{
  "compilerOptions": {
    "target":             "ES2020",
    "module":             "CommonJS",
    "moduleResolution":   "node",
    "outDir":             "./dist",
    "rootDir":            "./src",
    "strict":             true,
    "esModuleInterop":    true,
    "skipLibCheck":       true,
    "resolveJsonModule":  true,
    "typeRoots":          ["./node_modules/@types"]
  },
  "include": ["src"]
}
