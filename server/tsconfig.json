{
  "compilerOptions": {
    "target":             "ES2020",
    "module":             "CommonJS",
    "moduleResolution":   "node",
    "outDir":             "./dist",
    "rootDir":            "..",
    "strict":             true,
    "esModuleInterop":    true,
    "skipLibCheck":       true,
    "resolveJsonModule":  true,
    "typeRoots":          [
      "./node_modules/@types",
      "../client/node_modules/@types"
    ],
    "types":              ["node"],
    "paths": {
      "../../shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "../shared"]
}
